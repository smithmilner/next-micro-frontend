{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "host#build": {
      "dependsOn": ["remote1#build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^start"]
    }
  }
}
